#menu.box
  %ul.box.f-right
    %li
      = link_to '#' do
        %span
          %strong
            Visit Site &raquo;
  %ul.box
    - Project.order('name').all.each do |project|
      - if project == @project
        %li#menu-active
          = link_to :action => :show, :controller => '/projects', :project_name => project.name do
            %span= @project.name
      - else
        %li
          = link_to :action => :show, :controller => '/projects', :project_name => project.name do
            %span= project.name

