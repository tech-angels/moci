%tr{:class => "test_suite_run_#{tsr.id} state_#{tsr.state}", 'data-created-at' => tsr.created_at.to_i, 'data-time-est' => tsr.try(:previous_run).try(:run_time).to_i}
  %td.info
    .time
      = l tsr.updated_at, :format => :short
    .spinner
      .progress
  %td= tsr.test_suite.name
  %td= link_to tsr.commit.short_number, [tsr.commit.project, tsr.commit]
  %td.state= tsr.state
%tr{:class => "test_suite_run_#{tsr.id} details state_#{tsr.state}", :style => "display: none"}
  %td{:colspan => 4}
    %span.current_test_unit
